---
import Game from "../components/TerminalGame.jsx";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Juego Prende Linux">
    <header><h1>Aprende Jugando</h1></header>
    <div class="tablero">
        <div class="terminal">
            <div class="terminal-header">
                <div class="button close"></div>
                <div class="button minimize"></div>
                <div class="button maximize"></div>
            </div>
            <div id="output" class="output"></div>
            <div class="input-line">
                <span id="prompt" class="prompt">user@Iujo:~$ </span>
                <input type="text" id="input" autofocus />
            </div>
        </div>
        <Game client:only="react" />
    </div>
    <script is:inline src="/script.mjs"></script>
    <script is:inline src="/cambiarTexto.js"></script>
</Layout>

<style>
    body {
        background: linear-gradient(
            135deg,
            #000000,
            #1a1a1a
        ); /* Cyberpunk gradient */
        color: lime;
        font-family: "Roboto Mono", "Courier New", Courier, monospace;
        font-weight: bold;

        margin: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    button {
        background: transparent;
        color: lime;
        padding: 20px 0;
    }
    .terminal {
        background-color: rgba(30, 30, 30, 0.7);

        height: 90%;
        padding: 20px;
        overflow: auto; /* Allow scrolling if content overflows */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        position: relative;
    }

    /* Hide the scrollbar but allow scrolling */
    .terminal::-webkit-scrollbar {
        width: 0;
        height: 0;
    }

    .barraBotones {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .terminal-header {
        height: 25px;
        width: 100%;
        background-color: rgba(51, 51, 51, 0.7);
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        display: flex;
        align-items: center;
        padding-left: 10px;
        position: absolute;
        top: 0;
        left: 0;
    }

    header {
        font-size: 1.5rem;
        background: linear-gradient(to right, #00ff00, #d8ba0e);
        -webkit-background-clip: text;
        color: transparent;
        animation: blink 1s;
        text-align: center;
        text-shadow:
            0 0 10px rgba(66, 65, 65, 0.8),
            0 0 20px rgba(31, 27, 27, 0.6),
            0 0 30px rgba(24, 10, 10, 0.4);
    }
    @keyframes blink {
        0% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }

    #Pregunta {
        font-size: 20px;
    }

    .terminal-header .button {
        height: 12px;
        width: 12px;
        border-radius: 50%;
        margin-right: 8px;
    }

    .terminal-header .button.close {
        background-color: #ff5f56;
    }

    .terminal-header .button.minimize {
        background-color: #ffbd2e;
    }

    .terminal-header .button.maximize {
        background-color: #27c93f;
    }

    .output {
        white-space: pre-wrap;
        padding-top: 35px;
    }

    .input-line {
        display: flex;
    }

    .prompt {
        color: red;
    }

    input {
        background: none;
        border: none;
        color: lime;
        outline: none;
        flex: 1;
        font-family: "Roboto Mono", "Courier New", Courier, monospace;
        font-weight: bold;
    }
    .tablero {
        display: grid;
        grid-template-columns: 100%;
        grid-template-rows: 3fr 1fr; /* Para pantallas grandes */
        gap: 20px;
        width: 90%;
        height: 90vh;

        margin: 0 auto;
        align-items: baseline;
        justify-content: center;
    }

    @media (min-width: 768px) {
        .tablero {
            display: grid;
            grid-template-columns: 3fr 1fr;
            grid-template-rows: 100%;
        }
    }
</style>
